#include<stdio.h>
#include<stdlib.h>
#include<conio.h>
#include<string.h>
int i;
struct room
{

    int  r_charge;
    char r_type[7];
    char r_avail;
    int  r_per ;

}r_no[10];

struct customer
{
   char  c_name[20];
   int   n_days;
   int   room_no;
   float rent;
}cu;

void getavail()
 {
   for(i=0;i<10;i++)
    {
        if(i==0||i==1)
        {
            strcpy(r_no[i].r_type, " Special Deluxe ");
            r_no[i].r_charge = 1500;
            if(r_no[i].r_per==0)
                r_no[i].r_avail=' Y ';
            else
                r_no[i].r_avail=' N ';

        }
        if(i==2||i==3)
        {
            strcpy(r_no[i].r_type, " Deluxe ");
            r_no[i].r_charge = 1000;
            if(r_no[i].r_per==0)
                r_no[i].r_avail=' Y ';
            else
                r_no[i].r_avail=' N ';

        }
        if(i==4||i==5)
        {
            strcpy(r_no[i].r_type, " Economy ");
            r_no[i].r_charge = 750;
            if(r_no[i].r_per==0)
                r_no[i].r_avail=' Y ';
            else
                r_no[i].r_avail=' N ';

        }
        if(i==6||i==7)
        {
            strcpy(r_no[i].r_type, " Conference ");
            r_no[i].r_charge = 5000;
            if(r_no[i].r_per==0)
                r_no[i].r_avail=' Y ';
            else
                r_no[i].r_avail=' N ';

        }

    }

 }
void putavail()
 {
   system("cls");
   printf("\n                          ROOM AVAILABILITY");
   printf("\n                         -------------------");
   printf("\n Room No. |    Type     |  Charge  |  Availability  |  No. of Persons |");
   for(i=0;i<8;i++)
     {
         printf("\n%d       %s       %d      %c      %d",i+1,r_no[i].r_type,r_no[i].r_charge,r_no[i].r_avail,r_no[i].r_per);
     }
     getch();
 }
